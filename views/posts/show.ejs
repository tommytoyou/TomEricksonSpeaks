<h1>Contributor: <%= user.getFullName() %></h1>

<p><%= user.profile %></p>
<a href='posts.new' class='btn btn-primary'>Please share your creativity</a>

<hr />

<h2> Sonnets </h2>

<% if(user && user.posts) { %>
    <% user.posts.forEach(function(a) { %>
        <div class='well'>
            <h3>
                <a href='/posts/<%= a.id %>'><%= a.title %></a>
            </h3>
        </div>
    <%  }) %>
<% } else { %>
    <h3>No Sonnets Yet</h3>
<% } %>
